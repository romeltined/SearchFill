@page
<div class="container">
    <div class="row">&nbsp;</div>
    <div>
        <audio id="myAudio">
            <source src="https://upload.wikimedia.org/wikipedia/commons/3/34/Sound_Effect_-_Door_Bell.ogg" type="audio/ogg">
            Your browser does not support the audio element.
        </audio>
    </div>
    <div class="row">
        <div class="col-2">Sender</div>
        <div class="col-4"><input type="text" id="connectionId" /></div>
    </div>
    <div class="row">
        <div class="col-2">Receiver(email)</div>
        <div class="col-4"><input type="text" id="userInput" /></div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
