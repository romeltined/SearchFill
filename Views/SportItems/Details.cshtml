@model SearchFill.Models.SportItems

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Sport Items</h4>
    <hr />
    <dl class="col-sm-2">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sport)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.Sport)
        </dd>
    </dl>
</div>
    <br />
<div class="col-2">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Items)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
